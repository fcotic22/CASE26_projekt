<Window x:Class="CASE26_projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CASE26_projekt"
        mc:Ignorable="d" d:DesignWidth="800" Height="700">
    <DockPanel Margin="10">
        <TextBox x:Name="OutputTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" DockPanel.Dock="Top" Height="550"/>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <TextBox x:Name="InputTextBox" Width="600" Margin="0,0,10,0" Height="55"/>
            <Button Content="Send" Width="100" Click="SendButton_Click" KeyDown="Button_KeyDown" Height="55"/>
        </StackPanel>
    </DockPanel>
</Window>