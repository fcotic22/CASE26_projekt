<Window x:Class="CASE26_projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CASE26_projekt"
        mc:Ignorable="d"
        Title="Chatbot" Height="600" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <DataTemplate x:Key="UserMessageTemplate">
            <Grid Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="2"
                        Background="#DCF8C6"
                        CornerRadius="12"
                        Padding="12,8"
                        MaxWidth="600"
                        HorizontalAlignment="Right">
                    <StackPanel>
                        <TextBlock Text="{Binding Content}" TextWrapping="Wrap" Foreground="Black" FontSize="14"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                   FontSize="10"
                                   Foreground="Gray"
                                   HorizontalAlignment="Right"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="AssistantMessageTemplate">
            <Grid Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        Background="White"
                        CornerRadius="12"
                        Padding="12,8"
                        MaxWidth="600"
                        HorizontalAlignment="Left"
                        BorderBrush="#E6E6E6"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{Binding Content}" TextWrapping="Wrap" Foreground="Black" FontSize="14"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                   FontSize="10"
                                   Foreground="Gray"
                                   HorizontalAlignment="Right"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <local:ChatMessageTemplateSelector x:Key="ChatMessageTemplateSelector"
                                           UserTemplate="{StaticResource UserMessageTemplate}"
                                           AssistantTemplate="{StaticResource AssistantMessageTemplate}" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Height="45" Background="#2F9395" LastChildFill="False">
            <Button x:Name="btnDeleteChat" Height="30" Width="120" Margin="10" Content="Delete chat" DockPanel.Dock="Right" Background="White" Foreground="#2F9395" FontWeight="Medium" Click="btnDeleteChat_Click" />
        </DockPanel>

        <Border Grid.Row="1" Background="#F5F5F5" Padding="20">
            <ScrollViewer x:Name="chatScrollViewer" VerticalScrollBarVisibility="Auto" Background="#F5F5F5" CanContentScroll="False">
                <StackPanel>
                    <ItemsControl x:Name="chatMessages"
                                  ItemsSource="{Binding Messages}"
                                  ItemTemplateSelector="{StaticResource ChatMessageTemplateSelector}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Margin" Value="0,6" />
                                <Setter Property="Focusable" Value="False" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>

                    <TextBox x:Name="OutputTextBox"
                             Visibility="Collapsed"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             AcceptsReturn="True"
                             BorderThickness="0"
                             Background="#F5F5F5"
                             Foreground="Black" />
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="2" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtMessage"
                         Grid.Column="0"
                         Height="50"
                         Margin="20,10"
                         Padding="12,0"
                         VerticalContentAlignment="Center"
                         BorderThickness="1"
                         BorderBrush="#DDDDDD"
                         Background="#F5F5F5"
                         AcceptsReturn="False"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Auto"
                         KeyDown="txtMessage_KeyDown"/>

                <Button x:Name="btnSend"
                        Grid.Column="1"
                        Width="50"
                        Height="50"
                        Margin="0,10,20,10"
                        Click="btnSend_Click"
                        Background="#2F9395"
                        BorderThickness="0"
                        VerticalAlignment="Center">
                    <Path Data="M2,21 L23,12 L2,3 L2,10 L17,12 L2,14 Z"
                          Fill="White"
                          Stretch="Uniform"
                          Margin="12"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>